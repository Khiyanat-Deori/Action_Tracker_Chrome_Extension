{
    "manifest_version": 3,
    "name": "Action Tracker",
    "version": "1.1",
    "description": "Records user actions on a webpage",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["db.js", "tracker.js"],
            "run_at": "document_end"
        }
    ]
}
